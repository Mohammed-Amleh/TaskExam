<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TodayFragment">

    <TextView
        android:layout_margin="3dp"

        android:id="@+id/tv_design_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:text="Date"/>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"

        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        android:layout_toEndOf="@+id/tv_design_date"
        tools:text="Date" />

    <TextView

        android:id="@+id/tv_design_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_date"
        android:layout_alignParentStart="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        android:text="temp" />

    <TextView
        android:layout_margin="3dp"

        android:id="@+id/tv_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="temp"
        android:layout_toEndOf="@id/tv_design_temp"
        android:layout_below="@id/tv_design_date"/>


    <TextView
        android:layout_margin="3dp"

        android:id="@+id/tv_design_pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_temp"
        android:layout_alignParentStart="true"
        android:text="pressure" />

    <TextView
        android:layout_margin="3dp"

        android:id="@+id/tv_pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="pressure"
        android:layout_toEndOf="@id/tv_design_pressure"
        android:layout_below="@id/tv_design_temp"/>

    <TextView
        android:layout_margin="3dp"

        android:id="@+id/tv_design_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_pressure"
        android:layout_alignParentStart="true"
        android:text="humidity" />

    <TextView
        android:layout_margin="3dp"

        android:id="@+id/tv_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="humidity"
        android:layout_toEndOf="@id/tv_design_humidity"
        android:layout_below="@id/tv_pressure"/>



    <ImageView
        android:id="@+id/iv_sun_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_launcher_background" />



</RelativeLayout>